<Window x:Class="AdvanceCSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding Model.FirstName, UpdateSourceTrigger=LostFocus}"/>
            <TextBox Text="{Binding Model.LastName, UpdateSourceTrigger=LostFocus}"/>
            <TextBox Text="{Binding Model.Age, UpdateSourceTrigger=LostFocus}"/>
            <Label Name='Result'></Label>
            <Button Name="BtnResult" Command="{Binding TestCommand}">Click Me!</Button>
        </StackPanel>
    </Grid>
</Window>
