<Window x:Class="AdvanceCSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="150" Width="525">
    <Grid>
            <ScrollViewer >
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Name='Result'></Label>
                    <Button Grid.Row="1" Name="BtnResult">Click Me!</Button>
                <Slider Name="mySlider" Grid.Row="2" Margin="10" Minimum="1" Maximum="100" 
                        TickFrequency="1" IsSnapToTickEnabled="True" TickPlacement="BottomRight"/>
                <Label Grid.Row="3" Content="{Binding Value, ElementName=mySlider}"/>
            </Grid>
            </ScrollViewer>
    </Grid>
</Window>
