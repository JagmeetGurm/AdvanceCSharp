<Window x:Class="AdvanceCSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="150" Width="525">
    <Grid>
            <ScrollViewer >
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Name='Result'></Label>
                    <Button Grid.Row="1" Name="BtnResult">Click Me!</Button>
                <StackPanel Orientation="Horizontal"  Grid.Row="2">
                    <Label Content="low"/>
                <Slider Name="mySlider" Margin="10" Minimum="1" Maximum="100" 
                        TickFrequency="1" IsSnapToTickEnabled="True" Value="{Binding SliderValue}" TickPlacement="BottomRight"  Width="413">
                        
                    </Slider>
                    <Label Content="high"/>
                </StackPanel>
                <Label Grid.Row="3" Content="{Binding Value, ElementName=mySlider}"/>
            </Grid>
            </ScrollViewer>
    </Grid>
</Window>
